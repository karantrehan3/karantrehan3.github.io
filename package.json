{
  "name": "mantine-vite-template",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "homepage": "https://karantrehan3.github.io",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint . --cache",
    "stylelint": "stylelint '**/*.css' --cache",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "vitest": "vitest run",
    "vitest:watch": "vitest",
    "test": "npm run typecheck && npm run prettier && npm run lint && npm run vitest && npm run build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "bundle:analyze": "npm run build:analyze && open dist/stats.html",
    "convert:webp": "node scripts/optimize-images.js"
  },
  "dependencies": {
    "@mantine/core": "7.13.5",
    "@mantine/hooks": "7.13.5",
    "@tabler/icons-react": "^3.34.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@storybook/core-common": "^8.4.4",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.12.0",
    "eslint-config-mantine": "^4.0.3",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.1",
    "gh-pages": "^6.2.0",
    "husky": "^8.0.0",
    "imagemin": "^9.0.1",
    "imagemin-webp": "^8.0.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^13.0.0",
    "marked": "^16.1.2",
    "postcss": "^8.4.47",
    "postcss-preset-mantine": "1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^8.3.5",
    "storybook-dark-mode": "^4.0.2",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "terser": "^5.43.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0",
    "vite": "^5.4.9",
    "vite-bundle-analyzer": "^1.1.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "yarn@4.5.1"
}
